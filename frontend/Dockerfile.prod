FROM node:20-slim AS builder
WORKDIR /app

ARG VITE_API_URL=http://backend:8000
ENV VITE_API_URL=${VITE_API_URL}

COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM node:20-slim
WORKDIR /app
COPY --from=builder /app/dist ./dist
RUN npm install -g serve

EXPOSE 5173
CMD ["npx", "serve", "-s", "dist", "-l", "5173"]
